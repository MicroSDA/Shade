#Grid
#vertex
	#version 440
	layout (location = 0) in vec3 Position;
	
	uniform mat4 ModelM;
	uniform mat4 ViewM;
	uniform mat4 ProjectionM;

	void main()
	{
		gl_Position = ProjectionM * ViewM * ModelM * vec4(Position, 1.0f);
	}
#end
#fragment
#version 440

	void main()
	{
		gl_FragColor = vec4(0.5, 0.7, 0.5, 1);
	}
#end
#---